STAGED_TTS_DEBUG=1
STAGED_TTS_INTRO_TIMEOUT=6.0
STAGED_TTS_CHUNK_TIMEOUT=10.0
STAGED_TTS_TOTAL_TIMEOUT=35.0
STAGED_TTS_MAX_RETRIES=1
STAGED_TTS_RETRY_DELAY=0.3
STAGED_TTS_SANITIZE_TEXT=true
STAGED_TTS_REMOVE_DIACRITICS=true
