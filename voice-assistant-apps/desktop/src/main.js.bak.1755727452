const { app, BrowserWindow, Menu, ipcMain, dialog, shell, Tray, nativeImage } = require('electron');
const { pathToFileURL } = require('url');
const path = require('path');
const fs = require('fs');
const { spawn } = require('child_process');
const log = require('electron-log');
const { autoUpdater } = require('electron-updater');
const dotenv = require('dotenv');

const projectRoot = app.isPackaged ? require('path').join(process.resourcesPath, 'app') : require('path').resolve(__dirname, '../../../');
// Konfiguration
const isDev = process.env.NODE_ENV === 'development' || process.argv.includes('--dev');
const isWindows = process.platform === 'win32';
const isMac = process.platform === 'darwin';

let mainWindow;
let tray;
let backendProcess;

// Logging konfigurieren
log.transports.file.level = 'info';
autoUpdater.logger = log;

// Single Instance Lock
const gotTheLock = app.requestSingleInstanceLock();

if (!gotTheLock) {
  app.quit();
} else {
  app.on('second-instance', () => {
  if (mainWindow && !mainWindow.isDestroyed()) {
    if (mainWindow.isMinimized()) mainWindow.restore();
    mainWindow.show();
    mainWindow.focus();
  }
});
}

// GPU deaktivieren
app.disableHardwareAcceleration();
app.commandLine.appendSwitch('disable-gpu');
app.commandLine.appendSwitch('no-sandbox');
app.commandLine.appendSwitch('disable-setuid-sandbox');
app.commandLine.appendSwitch('disable-dev-shm-usage');
app.commandLine.appendSwitch('disable-setuid-sandbox');
app.commandLine.appendSwitch('disable-dev-shm-usage');
app.commandLine.appendSwitch('in-process-gpu');

// App Event Handlers
app.whenReady().then(() => {
  startBackend();
  createMainWindow();
  createTray();
  createMenu();

  if (!isDev && app.isPackaged) {
    autoUpdater.checkForUpdatesAndNotify();
  }
});

app.on('window-all-closed', () => {
  if (!isMac) {
    stopBackend();
    app.quit();
  }
});

app.on('activate', () => {
  if (BrowserWindow.getAllWindows().length === 0) {
    createMainWindow();
  }
});

app.on('before-quit', () => {
  stopBackend();
});

// Hauptfenster erstellen

function createMainWindow() {
  // Icon-Kandidaten – nimm den ersten existierenden
  const candidates = [
    path.join(projectRoot,'gui','icons','icon.png'),
    path.join(projectRoot,'gui','icons','icon-512x512.png'),
    path.join(projectRoot,'gui','icons','apple-touch-icon.png')
  ];
  const iconPath = candidates.find(p => fs.existsSync(p));

  const winOpts = {
    width: 1200,
    height: 900,
    minWidth: 800,
    minHeight: 600,
    webPreferences: {
      nodeIntegration: false,
      contextIsolation: true,
      enableRemoteModule: false,
      sandbox: false,
      webSecurity: false,
      ...(fs.existsSync(path.join(__dirname,'preload.js')) ? { preload: path.join(__dirname,'preload.js') } : {})
    },
    titleBarStyle: process.platform === 'darwin' ? 'hiddenInset' : 'default',
    show: false,
    backgroundColor: '#0f0f23',
    ...(iconPath ? { icon: iconPath } : {}) // nur setzen, wenn vorhanden
  };

  let html = path.join(projectRoot, 'gui', 'index.html');

  try {
    mainWindow = new BrowserWindow(winOpts);
  } catch (e) {
    log.error('BrowserWindow-Erstellung fehlgeschlagen:', e);
    dialog.showErrorBox('Fenster-Fehler', String(e));
    app.quit();
    return;
  }

  // GUI laden
  mainWindow.loadFile(html).catch(err => {
    log.error('GUI konnte nicht geladen werden:', err);
    dialog.showErrorBox('GUI-Fehler', String(err));
  });

  // In Dev automatisch zeigen
  mainWindow.once('ready-to-show', () => { try { mainWindow.show(); } catch(_) {} });
mainWindow.webContents.on('did-finish-load', () => log.info('GUI did-finish-load', path.join(projectRoot,'gui','index.html')));
mainWindow.webContents.on('did-fail-load', (e,code,desc,url,isMain) => {
  log.error('did-fail-load', {code, desc, url, isMain});
  try { dialog.showErrorBox('GUI konnte nicht geladen werden', `Code ${code}: ${desc}\nURL: ${url}`); } catch(_) {}
});
// Fallback: direkt anzeigen (falls ready-to-show nicht triggert)
  try { mainWindow.show(); } catch {}

  // Fenster-Events
  mainWindow.on('closed', () => { mainWindow = null; });

  mainWindow.on('minimize', (event) => {
    if (process.platform === 'win32') {
      event.preventDefault();
      mainWindow.hide();
    }
  });

  mainWindow.on('close', (event) => {
    if (!app.isQuiting) {
      event.preventDefault();
      try { mainWindow.hide(); } catch {}
    }
  });

  // Externe Links im Browser öffnen
  mainWindow.webContents.setWindowOpenHandler(({ url }) => {
    shell.openExternal(url);
    return { action: 'deny' };
  });

  // DevTools in Development
  const isDev = process.env.NODE_ENV === 'development' || process.argv.includes('--dev');
  if (isDev) {
    try { mainWindow.webContents.openDevTools(); } catch {}
  }
}

function startBackend() {
  try {
    // .env laden (Bundle-Root bevorzugt)
    const rootEnv = require('path').join(projectRoot, '.env');
    const localEnv = require('path').join(__dirname, '../.env');
    const envPath = fs.existsSync(rootEnv) ? rootEnv : localEnv;
    const defaultsPath = require('path').join(require('path').dirname(envPath), '.env.defaults');
    if (fs.existsSync(defaultsPath)) {
      dotenv.config({ path: defaultsPath });
    }
    if (fs.existsSync(envPath)) {
      dotenv.config({ path: envPath });
      log.info(`Loaded env from ${envPath}`);
    }

    // Python aus .venv bevorzugen, sonst $PYTHON_EXECUTABLE, sonst 'python3'
    const venvPython = require('path').join(projectRoot, '.venv', 'bin', 'python');
    const pythonCmd = fs.existsSync(venvPython) ? venvPython : (process.env.PYTHON_EXECUTABLE || 'python3');

    // Backend-Skript (immer relativ zum projectRoot)
    const serverScript = require('path').join(projectRoot, 'backend', 'ws-server', 'ws-server.py');

    log.info(`Starting backend with: ${pythonCmd} ${serverScript}`);
    const env = { ...process.env, PYTHONPATH: projectRoot };

    backendProcess = spawn(pythonCmd, [serverScript], {
      cwd: projectRoot,
      env
    });

    backendProcess.stdout.on('data', data => {
      const msg = data.toString();
      log.info(`[backend] ${msg}`);
      try {
        if (mainWindow && !mainWindow.isDestroyed() && mainWindow.webContents && !mainWindow.webContents.isDestroyed()) {
          mainWindow.webContents.send('backend-log', msg);
        }
      } catch (e) {
        log.warn('Failed to forward backend stdout to renderer:', e);
      }
    });

    backendProcess.stderr.on('data', data => {
      const msg = data.toString();
      log.error(`[backend] ${msg}`);
      try {
        if (mainWindow && !mainWindow.isDestroyed() && mainWindow.webContents && !mainWindow.webContents.isDestroyed()) {
          mainWindow.webContents.send('backend-error', msg);
        }
      } catch (e) {
        log.warn('Failed to forward backend stderr to renderer:', e);
      }
    });

    backendProcess.on('spawn', () => log.info('Backend process started'));
    backendProcess.on('error', err => {
      log.error('Failed to start backend:', err);
      if (err.code === 'ENOENT') {
        dialog.showErrorBox('Python Error', err.message);
      } else {
        dialog.showErrorBox('Backend start failed', err.message);
      }
    });
    backendProcess.on('close', code => log.info(`Backend exited with code ${code}`));
  } catch (err) {
    log.error('Failed to start backend:', err);
    dialog.showErrorBox('Backend start failed', err.message);
  }
}

function stopBackend() {
  if (backendProcess) {
    backendProcess.kill();
    backendProcess = null;
  }
}

// System Tray erstellen

function createTray() {
  try {
    const cand = [
      path.join(projectRoot,'gui','icons','icon.png'),
      path.join(projectRoot,'gui','icons','icon-512x512.png'),
      path.join(projectRoot,'gui','icons','apple-touch-icon.png')
    ];
    let trayImg = nativeImage.createFromPath(cand.find(p => fs.existsSync(p)) || '');
    if (trayImg.isEmpty && trayImg.isEmpty()) {
      // Fallback: leeres kleines Icon (verhindert Throw unter Linux)
      trayImg = nativeImage.createEmpty();
    }
    tray = new Tray(trayImg.resize({ width: 16, height: 16 }));

    const contextMenu = Menu.buildFromTemplate([
      { label: 'KI-Sprachassistent', type: 'normal', enabled: false },
      { type: 'separator' },
      {
        label: 'Öffnen',
        click: () => { try { if (mainWindow) { mainWindow.show(); mainWindow.focus(); } } catch {} }
      },
      {
        label: 'Minimieren',
        click: () => { try { if (mainWindow) mainWindow.hide(); } catch {} }
      },
      { type: 'separator' },
      {
        label: 'Beenden',
        click: () => {
          app.isQuiting = true;
          try { if (mainWindow) mainWindow.destroy(); } catch {}
          app.quit();
        }
      }
    ]);

    tray.setContextMenu(contextMenu);
    tray.setToolTip('KI-Sprachassistent');
    tray.on('click', () => {
      try {
        if (mainWindow?.isVisible()) {
          mainWindow.hide();
        } else {
          mainWindow?.show();
          mainWindow?.focus();
        }
      } catch {}
    });
  } catch (e) {
    // Falls Tray (AppIndicator) unter GNOME nicht verfügbar ist, einfach ohne Tray weiterlaufen
    log.warn('Tray konnte nicht initialisiert werden (läuft ohne Tray):', e);
  }
}

