{
  "name": "ki-sprachassistent",
  "version": "2.1.0",
  "description": "KI-Sprachassistent für Desktop - Entwickelt für Raspberry Pi",
  "main": "src/main.js",
  "homepage": "./",
  "author": {
    "name": "Voice Assistant Team",
    "email": "info@voice-assistant.local"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "electron:start": "electron . --dev --disable-gpu --no-sandbox --in-process-gpu",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "dist:deb": "electron-builder --linux deb --publish=never",
    "pack:dir": "electron-builder --dir --publish=never"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "com.voiceassistant.desktop",
    "productName": "KI-Sprachassistent",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "../shared/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo",
      "icon": "../../gui/icons",
      "desktop": {
        "Name": "KI-Sprachassistent",
        "Comment": "All-in-one Voice Assistant (Zonos + Faster-Whisper)"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "../../backend",
        "to": "app/backend"
      },
      {
        "from": "../../gui",
        "to": "app/gui"
      },
      {
        "from": "../../models",
        "to": "app/models"
      },
      {
        "from": "../../spk_cache",
        "to": "app/spk_cache"
      },
      {
        "from": "../../voice-assistant-apps/shared",
        "to": "app/voice-assistant-apps/shared"
      },
      {
        "from": "../../config",
        "to": "app/config"
      },
      {
        "from": "../../.env",
        "to": "app/.env"
      }
    ]
  },
  "keywords": [
    "voice",
    "assistant",
    "speech",
    "recognition",
    "ai",
    "raspberry-pi",
    "electron"
  ]
}
