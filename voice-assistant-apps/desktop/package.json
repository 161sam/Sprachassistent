{
  "name": "ki-sprachassistent",
  "version": "2.1.0",
  "description": "KI-Sprachassistent für Desktop - Entwickelt für Raspberry Pi",
  "main": "src/main.js",
  "homepage": "./",
  "author": {
    "name": "Voice Assistant Team",
    "email": "info@voice-assistant.local"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "electron:start": "electron . --dev --disable-gpu --no-sandbox --in-process-gpu",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "dist:deb": "electron-builder --linux deb --publish=never",
    "pack:dir": "electron-builder --dir --publish=never",
    "build:backend:linux": "echo \"(run later) pyinstaller backend/ws-server/ws-server.py --name ws-server --onefile --clean --noconfirm && mkdir -p voice-assistant-apps/desktop/resources/bin/linux && cp dist/ws-server voice-assistant-apps/desktop/resources/bin/linux/\"",
    "build:backend:win": "echo \"(run later) pyinstaller backend/ws-server/ws-server.py --name ws-server --onefile --clean --noconfirm && mkdir -p voice-assistant-apps/desktop/resources/bin/win && copy dist\\\\ws-server.exe voice-assistant-apps\\\\desktop\\\\resources\\\\bin\\\\win\\\\\"",
    "dist:linux": "electron-builder --linux AppImage,deb",
    "dist:win": "electron-builder --win nsis",
    "dist": "electron-builder -mwl"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "com.example.sprachassistent",
    "productName": "KI Sprachassistent",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": { "buildResources": "build", "output": "dist" },
    "files": [ "src/**", "package.json" ],
    "asar": true,
    "asarUnpack": [ "resources/**" ],
    "extraResources": [
      { "from": "resources/", "to": ".", "filter": ["**/*"] }
    ],
    "linux": { "category": "Utility", "target": ["AppImage","deb"], "icon": "build/icons" },
    "win":   { "target": ["nsis"], "icon": "build/icons/icon.ico" },
    "nsis":  { "oneClick": true, "perMachine": false, "allowElevation": true, "deleteAppDataOnUninstall": false },
    "publish": [{ "provider": "github" }]
  },
  "keywords": [
    "voice",
    "assistant",
    "speech",
    "recognition",
    "ai",
    "raspberry-pi",
    "electron"
  ]
}