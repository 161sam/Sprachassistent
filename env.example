# === App Configuration ===
APP_ENV=development
PYTHON_EXECUTABLE=python3
WS_HOST=localhost
WS_PORT=8001

# === Authentication ===
# Default development token used by the desktop client
WS_TOKEN=devsecret

# === STT Configuration ===
STT_MODEL=Systran/faster-whisper-base
STT_DEVICE=cpu
STT_PRECISION=int8

# === TTS Configuration ===
# TODO-FIXED(2025-08-23): consolidated TTS defaults with config/tts.json
KOKORO_MODEL=kokoro-v1.0.int8.onnx
KOKORO_LANG=en-us

# === External Services ===
FLOWISE_URL=http://localhost:3000
FLOWISE_API_KEY=
N8N_HOST=localhost
N8N_PORT=5678
N8N_API_KEY=
HEADSCALE_DOMAIN=example.com
HEADSCALE_KEY_DIR=/var/lib/headscale

# === LLM Configuration ===
LLM_API_BASE=http://localhost:1234/v1

# === Misc ===
ENABLED_SKILLS=TimeSkill,GreetingSkill,GratitudeSkill
RETRY_LIMIT=3
RETRY_BACKOFF=1.0
ALLOWED_IPS=127.0.0.1
