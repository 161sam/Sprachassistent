# Staged TTS Configuration Example

# Copy these settings to your .env file to enable staged TTS

# Enable/disable staged TTS
STAGED_TTS_ENABLED=true

# Maximum response length in characters (hard limit)
STAGED_TTS_MAX_RESPONSE_LENGTH=500

# Maximum intro length for Piper (Stage A)
STAGED_TTS_MAX_INTRO_LENGTH=120

# Timeout per chunk in seconds
STAGED_TTS_CHUNK_TIMEOUT=10

# Maximum number of chunks to process
STAGED_TTS_MAX_CHUNKS=3

# Enable LRU caching for performance
STAGED_TTS_ENABLE_CACHING=true

# Example LLM system prompt for better TTS output
# Add this to your LLM configuration:
LLM_SYSTEM_PROMPT="Du bist ein sprachiger Voice-Assistent. Antworte in natürlichen, kurzen Sätzen (gesamte Antwort ≤ 500 Zeichen). Verwende klare, sprechgerechte Zeichensetzung für gute TTS-Prosodie: Punkte, Kommas, gelegentlich Doppelpunkt oder Gedankenstrich. Keine Listen, kein Markdown, keine Codeblöcke. Nutze höchstens eine kurze Einleitung (max. 120 Zeichen), dann die Kernaussage. Vermeide Füllwörter. Zahlen bevorzugt aussprechen (zwanzigtausend statt 20.000) wo sinnvoll."

# TTS Engine settings (ensure both engines are available)
TTS_ENGINE=zonos
PIPER_MODEL_PATH=models/piper/de_DE-thorsten-low.onnx
ZONOS_MODEL_PATH=models/zonos/
ZONOS_LANG=de
